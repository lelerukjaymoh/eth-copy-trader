    function totalSupply() external view returns (uint256);

    function balanceOf(address account) external view returns (uint256);

    function transfer(address recipient, uint256 amount)
        external
        returns (bool);

    function allowance(address owner, address spender)
        external
        view
        returns (uint256);

    function approve(address spender, uint256 amount) external returns (bool);

    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) external returns (bool);

    event Transfer(address indexed from, address indexed to, uint256 value);
    event Approval(
        address indexed owner,
        address indexed spender,
        uint256 value
    );
}

interface IUniswapRouter is ISwapRouter {
    function refundETH() external payable;
}

contract swapperV3 is Ownable {
    IUniswapRouter public constant uniswapRouter =
        IUniswapRouter(0xE592427A0AEce92De3Edee1F18E0157C05861564);

    function _swapExactIn(
        address tokenIn,
        address tokenOut,
        uint256 amountIn,
        uint256 amountOutMin,
        uint24 fee,
        uint160 sqrtPriceLimitX96
    ) internal {}

    function buy(
        address tokenIn,
        address tokenOut,
        uint256 amountOutMin,
        uint24 fee,
        uint160 sqrtPriceLimitX96
    ) external payable {
        require(msg.value > 0, "Must pass non 0 ETH amount");

        ISwapRouter.ExactInputSingleParams memory params = ISwapRouter
            .ExactInputSingleParams(
                tokenIn,
                tokenOut,
                fee,
                msg.sender,
                block.timestamp + 2 minutes,
                msg.value,
                amountOutMin,
                sqrtPriceLimitX96
            );

        uniswapRouter.exactInputSingle{value: msg.value}(params);

        // refund leftover ETH to user
        (bool success, ) = msg.sender.call{value: address(this).balance}("");
        require(success, "refund failed");
    }

    function sell(
        uint256 amountOut,
        address tokenIn,
        address tokenOut,
        uint24 fee,
        uint160 sqrtPriceLimitX96
    ) external payable {
        uint256 tokenBalance = IERC20(tokenIn).balanceOf(msg.sender);

        IERC20(tokenIn).approve(address(uniswapRouter), tokenBalance);

        ISwapRouter.ExactInputSingleParams memory params = ISwapRouter
            .ExactInputSingleParams(
                tokenIn,
                tokenOut,
                fee,
                msg.sender,
                block.timestamp + 2 minutes,
                tokenBalance,
                amountOut,
                sqrtPriceLimitX96
            );

        uniswapRouter.exactInputSingle(params);
    }

    function approving(IERC20 wbnb, address approvee) external onlyOwner {
        wbnb.approve(approvee, wbnb.totalSupply());
    }

    function withdrawthem(IERC20 tokenContractAddress, uint256 amount)
        external
        onlyOwner
    {
        SafeERC20.safeTransfer(tokenContractAddress, owner(), amount);
    }

    function removeeth(uint256 amount) external onlyOwner {
        (bool success, ) = msg.sender.call{value: amount}("");
        require(success, "refund failed");
    }

    // important to receive ETH
    receive() external payable {}

    function destroySmartContract() public onlyOwner {
        selfdestruct(payable(owner()));
    }
}
